const fetch = require("node-fetch");

exports.handler = async (event) => {
const { prompt } = JSON.parse(event.body);
const OPENAI_KEY = process.env.OPENAI_API_KEY;

if(!prompt) return { statusCode: 400, body: JSON.stringify({ result: "Enter a prompt!" }) };

try {
const response = await fetch("https://api.openai.com/v1/completions", {
method: "POST",
headers: {
"Authorization": `Bearer ${OPENAI_KEY}`,
"Content-Type": "application/json"
},
body: JSON.stringify({
model: "text-davinci-003",
prompt: `Generate a futuristic viral Instagram / TikTok content plan for: "${prompt}"`,
max_tokens: 300
})
});

const data = await response.json();

return {
statusCode: 200,
body: JSON.stringify({ result: data.choices[0].text })
};

} catch(err) {
return { statusCode: 500, body: JSON.stringify({ result: "AI generation failed." }) };
}
