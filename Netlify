exports.handler = async (event, context) => {
  const { prompt } = JSON.parse(event.body);

  if(!prompt) {
    return { statusCode: 400, body: JSON.stringify({ result: "Prompt required" }) };
  }

  const generated = `ðŸ”¥ AI content for: "${prompt}"\nYour viral-ready content goes here!`;
  return { statusCode: 200, body: JSON.stringify({ result: generated }) };
};
